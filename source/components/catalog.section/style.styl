@import '../../styl/component-include.styl'

.b-catalog-section
  @media( max-width 767px )
    h1
      margin-bottom 0
      
#buyCatalogElementPopup
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  display none
  z-index 1000
  
  &.i-show
    display block
  
  &Opaco
    background-color rgba( 255, 255, 255, .5 )
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    opacity 0
    transition( opacity .3s ease )
    z-index 1001
    
    #buyCatalogElementPopup.i-animate &
      opacity 1
    
  &Window
    position absolute
    top calc( 50% - 25px )
    left calc( 50% - 300px )
    background-color blue
    width 600px
    padding 25px 25px
    transition( all .3s ease )
    transform( scale( .9 ))
    opacity 0
    z-index 1002
    
    #buyCatalogElementPopup.i-animate &
      opacity 1
      transform( scale(1))
    
    a
      color #fff
      text-decoration underline
      white-space nowrap
      
    @media( max-width 767px )
      width 300px
      top calc( 50% - 40px )
      left calc( 50% - 150px )
      height auto
    
  .b-catalog-element-popup__close
    position absolute
    top 10px
    right 10px
    width 20px
    height 20px
    cursor pointer
    z-index 1
    
    &:before
      content ''
      display block
      border-right 1px solid #fff
      position absolute
      top 0
      left 10px
      transform( rotate( 45deg))
      height 100%
      z-index 1
    
    &:after
      content ''
      display block
      border-right 1px solid #fff
      position absolute
      top 0
      left 10px
      transform( rotate( -45deg))
      height 100%
      z-index 1
    
  .b-catalog-element-popup__body
    color #fff
    line-height normal

.b-catalog-collection
  text-align left

.product-item-list__more
  text-align center

  .btn
    width 100%
    max-width 140px

.product-item-small-card
  display flex
  align-items stretch
  justify-content space-between
  flex-wrap wrap

  &--hide-elements

    .b-catalog-element
      opacity 0

  &--show-elements
  
    .b-catalog-element
      opacity 1
      transition( opacity .5s ease-out )

      &:nth-child(1)
        transition-delay 0s

      &:nth-child(2)
        transition-delay .1s

      &:nth-child(3)
        transition-delay 0.2s

      &:nth-child(4)
        transition-delay 0.3s

      &:nth-child(5)
        transition-delay 0.4s

      &:nth-child(6)
        transition-delay 0.5s

      &:nth-child(7)
        transition-delay 0.6s

      &:nth-child(8)
        transition-delay 0.7s

  .b-catalog-element
    margin-bottom 30px

  .b-catalog-element,
  > div
    width calc((100% - 30px *3) / 4)

    @media(max-width 767px)
      width calc((100% - 10px) / 2)


.b-catalog-element
  padding-top 20px
  padding-bottom 20px
  background-color #fff
  position relative
  border-bottom 1px solid #eee
  display grid
  grid-template-rows auto 1fr
  row-gap 10px

  &__availability-label
    position absolute
    top 0
    right 0
    width 16px
    height 16px
    border-radius 50%
    background-repeat no-repeat
    background-position center
    background-size 16px
    z-index 10

  &__sale-label
    position absolute
    top 0
    left 0
    color #FF0000
    font-size 9pt
    z-index 10

  &__data
    display none

  &__body
    display flex
    flex-direction column
    justify-content flex-end

  &__img
    width 100%
    padding-top 50%
    background-repeat no-repeat
    background-position center
    background-size contain
    position relative
    
    &-hover
      display block
      position absolute
      top 0
      left 0
      width 100%
      padding-top 50%
      background-repeat no-repeat
      background-position center
      background-size contain
      background-color #fff
      opacity 0
      transition( opacity 0.5s ease )
      
  &__fotorama
    
    &:not( .fotorama ) > div
      display none
      
      &:first-child
        display block
  
    &-img
      display block
      padding-top 130%
      background-repeat no-repeat
      background-position center
      background-size cover
      position relative
      
      a&:hover
        opacity 1
      
    .fotorama__arr
      display none !important
      
  &__title
    width 100%
    display flex
    align-items center
    justify-content center
    text-align center
    padding 0 20px
    color #0D0D0D
    font-size: 11pt
    line-height 20px
    margin-bottom 10px

    &:hover
      color #0D0D0D
    
  &__price
    width 100%
    font-size 13.5pt
    font-weight 600
    transition( all 0.5s ease )
    padding-right 20px
    padding-left 20px
    width 100%
    text-align center
    display flex
    justify-content center
    align-items center
    
    @media( max-width 991px )
      padding-left 15px
        
    &.i-discount
      color #ff3333
        
      span
        margin-right 10px
      
      s
        color #000
        text-decoration line-through
        font-size 9px
        font-weight 400

  &__props-icons
    width 100%
    display flex
    justify-content center
    align-items center
    flex-wrap wrap
    min-height 32px
    margin-bottom 7px

  &__buttons-block
    width 100%

    @media(min-width 1025px)
      opacity 0
      transition( opacity .3s ease-out )

      .b-catalog-element:hover &
        opacity 1

    
    
  &__button,
  &__subscribe
    clear both
    padding 15px 10px 0
    text-align center

    .btn
      max-width 140px
      width 100%

      span
        display none

        &.i-show
          display inline-block
        
  &__colors-block
    text-align left
    padding 9px 20px 0
    visibility hidden
    opacity 0
    transition( opacity .3s ease .3s )
    
  &__colors-item
    display inline-block
    vertical-align top
    width 17px
    height 17px
    border-radius 51%
    margin 0 14px 7px 0
    cursor pointer
    transition( transform 0.3s ease )
    text-align center
    background-repeat no-repeat
    background-position center
    background-size cover
    
    &.i-white
      border 1px solid #eee
    
    &:hover
      transform scale( 1.3 )
      
    &.i-disabled
      opacity 0.5
      
    span
      display none
      width 10px
      height 5px
      margin-top 4px
      border-left 1px solid #fff
      border-bottom 1px solid #fff
      transform( rotate(-45deg) )
      
    &.i-white
      
      span
        border-color #ddd
      
    &.i-active
      transform scale( 1.3 )
      
      span
        display inline-block
        vertical-align top
    
  &__sizes-block
    display flex
    justify-content left
    flex-wrap wrap
    padding 0 20px
    
  &__sizes-item
    font-size 9pt
    min-width 14px
    display inline-block
    vertical-align top
    cursor pointer
    text-align center
    border-bottom 2px solid transparent
    padding-bottom 3px
    margin 0 10px 9px 0
    
    &.i-active
      color #2f3154
      border-bottom 2px solid #2f3154
      
    &.i-disabled,
    &.i-subscribe
      opacity 0.5
      
  &__props,
  &__num
    font-size 7pt
    line-height 18px
    padding 0 20px
    
  .b-product-item-list-col-1 &
    
    &__fotorama-img
      padding-top 75%
      background-size contain
      
  &__propList-block
    padding 0 20px
  
    h6
      font-size 7pt
      line-height 18px
      
.b-catalog-collection .col-sm-2 .col-xs-5.b-catalog-element__button,
.b-catalog-collection .col-sm-6 .col-sm-4 .col-xs-5.b-catalog-element__button,
.b-catalog-collection .col-sm-2 .col-xs-5.b-catalog-element__subscribe,
.b-catalog-collection .col-sm-6 .col-sm-4 .col-xs-5.b-catalog-element__subscribe
  width 100% !important
  position relative
  text-align left
  padding-left 35px
  margin-top 15px
  
.b-catalog-collection
  
  .col-sm-2,
  .col-sm-6 .col-sm-4,
  .col-sm-9 & .col-sm-3,
  .col-sm-9 & .col-sm-6 .col-sm-6
    
    .b-catalog-element__price
      padding-right 15px
      padding-left 15px
      
    @media( min-width 768px )
      
      .b-catalog-element__title
        font-size 9pt
        line-height 1.4
        
      .b-catalog-element__price
        font-size 10pt
  
.bj-sorting
  font-size .85rem
  
  .text-muted
    float left
    margin-right 15px
    
  .dropdown
    float left
    
    a:hover
      text-decoration none
      
    .caret
      margin-left 5px
    
  &:after
    content ''
    display block
    clear both
    
  .dropdown-menu
    border none
    font-size .85rem
    left -20px
    min-width calc(100% + 20px)
    
    >li>a:focus,
    >li>a:hover
      background #f5f5f5
  
.modal

  .b-buy-modal-text
    padding-top 50px
    
    h2
      font-size 21pt
      margin 0 0 45px
  
  .b-catalog-element__colors-item
    display inline-block
    vertical-align top
    width 24px
    height 24px
    border-radius 51%
    margin 0 9px 9px
    cursor pointer
    text-align center

#subscribeModal

  p
    font-size 9pt
    margin-bottom 20px
    
    &:last-child
      margin-bottom 0
    
  .modal-body
    padding 30px 60px
    line-height 14px
    transition( height 0.5s ease )
    
    @media( max-width 767px )
      padding 20px 40px
    
  label
    margin-bottom 6px
    color #333
    vertical-align top
    font-size 8pt
    
  .form-control
    height 29pt
    padding 6px 10px
    font-size 10.5pt
    line-height 1.72857143
    
  textarea.form-control
    height 83px
    
  .form-group
    margin-bottom 21px
    opacity 0
    
    &:last-child
      margin-bottom 11px
    
  &.in .form-group
    animation form-opacity .3s
    animation-fill-mode forwards
  
    &:nth-of-type(2)
      animation-delay .15s
  
    &:nth-of-type(3)
      animation-delay .3s
  
    &:nth-of-type(4)
      animation-delay .453s
  
    &:nth-of-type(5)
      animation-delay .6s
      
  .btn
    line-height 1.72857143
    padding 6px 14px
    min-width 141px
    
    &.i-gray
      background-color #ececec
      border-color #ececec
      display none
      
      &:hover
        color inherit
        
.b-prop
  color #fff
  line-height 13px
  height 13px
  padding 0 5px
  font-size 7pt
  text-transform uppercase
  margin 0 3px 3px 0
  flex-shrink 0
  text-align center
  
  @media( max-width 767px )
    margin 0 4px 3px
        
@keyframes form-opacity
  from
    opacity 0
  to
    opacity 1
    
//presents block on the cart page
.b-catalog-collection[ data-entity="sale-products-gift-container" ]

  @media ( max-width: 767px )
            
    .b-catalog-element__button
      display block !important
        
    .b-catalog-element__button .btn
      opacity 1
      
    .b-catalog-element__propList-block,
    .b-catalog-element__props
      display none