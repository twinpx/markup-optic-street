@import '../../styl/component-include.styl'
  
.bj-header-address
  font-size .8rem
  line-height 18px
  margin-left 30px
  white-space nowrap
  position relative
  display inline-block
  vertical-align middle
  transition( opacity .5s ease)
    
  &__title
    color #000
    display inline-block
    margin-right 10px
    cursor pointer

    &.dashed
      border-bottom 1px dashed #ADADAD

  &__location
    color #888
    display inline-block
    margin-right 30px

  &__phone
    color #000

  &__dropdown
    display block
    background-color #fff
    box-shadow( 0px 3px 6px #00000029)
    padding 30px
    position absolute
    top 20px
    left -10px
    width calc(100% + 20px)
    opacity 0
    transition( all .5s ease )
    z-index -1

    &.dropdown--show
      opacity 1
      z-index 1010

    > span
      margin-bottom 12px
      display block

      &:last-child
        margin-bottom 0

      b
        font-weight bold
        margin-right 10px
        color #000

      i
        font-style normal
        color #888

      span
        display block
        color #000